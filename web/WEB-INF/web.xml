        <welcome-file>
            welcome.jsp
        </welcome-file>
    </welcome-file-list>
    
    <servlet>
		<servlet-name>BookFetcher</servlet-name>
		<servlet-class>com.ee.controller.BookDetailsFetcher</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BookFetcher</servlet-name>
		<url-pattern>/getDetails.do</url-pattern>
	</servlet-mapping>
	
